---
interface Props {
  title: string
  description?: string
}

const { title, description } = Astro.props
---

<section class="w-full flex justify-center items-center my-10 flex-col">
  <div class=" w-full flex justify-center items-start flex-col px-4 md:max-w-4xl">
    <h2 class="text-gray-800 font-bold text-2xl md:text-4xl">{title}</h2>
    <hr class=" w-16 border-primary my-4 border-[1px]">
  </div>
  <div class="w-full flex justify-center items-center px-4 flex-col md:max-w-screen-md">
    <p>{description}</p>
    <ul class="pl-4 my-6 list-disc gap-2 grid md:pl-0">
      <slot />
    </ul>
    <slot name="button"/>
  </div>
</section>