---
interface Props {
  title: string
  imgSrc: string
  description: string
  alt: string
}

const { title, imgSrc, description, alt } = Astro.props
---

<section class="w-full flex justify-center items-center my-10 flex-col" id="nosotros">
  <div class="w-full px-4 grid grid-cols-1 place-content-center place-items-center gap-3 md:my-10 md:gap-10 md:grid-cols-2 md:max-w-7xl">
    <article class=" animate-fade-in-right">
      <h2 class="text-gray-800 font-bold text-2xl md:text-4xl">{title}</h2>
      <hr class=" w-16 border-primary my-6 border-[1px]">
      <img class="rounded-ee-[80px] mb-6 md:hidden" src={imgSrc} alt={alt}>
      <p>{description}</p>
    </article>
    <img class="hidden rounded-ee-[80px] animate-fade-in-left md:block" src={imgSrc} alt={alt}>
  </div>
</section>