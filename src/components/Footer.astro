---
import Facebook from '../components/Facebook.astro'
import Instagram from '../components/Instagram.astro'

const year = new Date().getFullYear()
---
<footer class="w-full flex justify-center items-center flex-col">
  <hr class="w-full border-primary my-2 border-[1px] md:my-1">
  <section class="w-full grid grid-cols-1 place-content-center place-items-center px-4 md:grid-cols-3">
    <p class="order-2 text-center my-2 md:order-1 md:my-0">© {year} Todos los derechos reservados Arte Dental Condesa.</p>
    <div class="flex justify-center items-center order-1 md:order-2">
      <a 
        href="https://www.facebook.com/profile.php?id=61557192713683" 
        class=" no-underline mr-3" 
        aria-label="Ir a la página de Facebook de Arte Dental Condesa"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Facebook class="w-10 fill-primary transition hover:fill-secondary hover:transition"/>
    </a>
      <a 
        href="https://www.instagram.com/arte.dental.condesa" 
        class=" no-underline" 
        aria-label="Ir a la página de Instagram de Arte Dental Condesa"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Instagram class="w-10 fill-primary transition hover:fill-secondary hover:transition"/>
    </a>
    </div>
    <a 
      class="order-3" 
      href="https://wa.me/525514476309" 
      target="_blank" 
      rel="noopener noreferrer"
    >
      Desarrollado por Agencia Dentarios
    </a>
  </section>
</footer>