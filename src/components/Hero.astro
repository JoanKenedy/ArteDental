---
interface Props {
  title: string;
  text: string;
  span: string;
  img?: string;
  video?: string;
  reverse?: boolean;
  isHero?: boolean;
  number?: string;
  error?: string;
}

const { title, text, span, img, isHero, reverse, number, error, video } =
  Astro.props;
---

<section class="w-full flex justify-center items-center">
  <div
    class="w-full px-4 grid grid-cols-1 place-content-center place-items-center gap-3 md:gap-10 md:grid-cols-[repeat(2,_minmax(350px,_500px))] md:max-w-7xl"
  >
    {
      video ? (
        <video
          src={video}
          class="w-full aspect-video max-w-5xl rounded-2xl order-1 animate-fade-in-left md:order-2"
          autoplay
          loop
          muted
          controls
        />
      ) : (
        <img
          decoding={`${isHero ? "sync" : "async"}`}
          class={`animate-fade-in-left ${reverse ? "rounded-es-[80px]" : "rounded-ee-[80px] md:order-2"}`}
          src={img}
          alt="Consultorio Arte Dental"
        />
      )
    }
    <article class={`animate-fade-in-right`}>
      <h1 class="text-gray-800 font-bold text-2xl md:text-4xl">{title}</h1>
      <hr class="w-16 border-primary my-6 border-[1px]" />
      <p>
        {text}<br />
        <span class="font-semibold text-secondary text-lg">{span}</span>
      </p>
      <a
        class="py-3 px-5 bg-primary rounded-full text-white my-4 inline-block animate-iteration-count-infinite animate-pulsing"
        href="https://wa.me/525516513563?text=Buenas%20tardes,%20solicito%20informaci%C3%B3n%20sobre"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Agenda tu cita"
      >
        Agendar Cita
      </a>
    </article>
  </div>
</section>
